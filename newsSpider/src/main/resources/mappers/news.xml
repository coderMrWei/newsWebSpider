<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.merphy.dao.NewsDao">

    <resultMap type="com.merphy.dao.model.News" id="NewsResult">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="titleImage" column="title_image"/>
        <result property="content" column="content"/>
        <result property="tag" column="tag"/>
        <result property="sourceWebSite" column="source_website"/>
        <result property="sourceWebSiteUrl" column="source_website_url"/>
        <result property="sourceUrl" column="source_url"/>
        <result property="visitCount" column="visit_count"/>
        <result property="commentCount" column="comment_count"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="about" column="about"/>
    </resultMap>

    <select id="getNewsById" parameterType="Integer" resultMap="NewsResult">
        select * from t_user where userName=#{userName} and password=#{password} and roleName=#{roleName}
    </select>

    <select id="queryNews" parameterType="Map" resultMap="List">
        select * from t_user
        <where>
            <if test="userName!=null and userName!=''">
                and userName like #{userName}
            </if>
        </where>
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>

    <select id="getTotal" parameterType="Map" resultType="Long">
        select count(*) from t_user
        <where>
            <if test="userName!=null and userName!=''">
                and userName like #{userName}
            </if>
        </where>
    </select>
</mapper>